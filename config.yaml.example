# MTG Arena Log Parser Configuration
# Copy this file to config.yaml and update the paths for your system

# MTG Arena installation paths
mtga:
  # Path to MTGA player log file
  player_log: "/Users/YOUR_USERNAME/Library/Logs/Wizards Of The Coast/MTGA/Player.log"

  # Directory containing MTGA logs
  logs_dir: "/Users/YOUR_USERNAME/Library/Logs/Wizards Of The Coast/MTGA"

  # Path to MTGA card database (Raw directory)
  card_database_dir: "/Users/YOUR_USERNAME/Library/Application Support/com.wizards.mtga/Downloads/Raw"

# Output configuration
output:
  # Where to save the extracted card database JSON
  card_database_json: "./src/cards_database/card_database.json"
